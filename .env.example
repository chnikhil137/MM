# Environment Variables — MM Function Hall
# Copy this file to .env.local and fill in your actual values

# ─── Database (Supabase / Neon PostgreSQL) ───────────────────────
DATABASE_URL="postgresql://user:password@host:5432/mm_function_hall?sslmode=require"

# ─── NextAuth ────────────────────────────────────────────────────
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"
NEXTAUTH_URL="http://localhost:3000"

# ─── Admin Credentials ───────────────────────────────────────────
# These are hashed before storing — see Phase 3 for setup
ADMIN_EMAIL="admin@mmfunctionhall.com"
ADMIN_PASSWORD_HASH="$2b$12$..." # bcrypt hash — generated in Phase 3

# ─── Contact Info (used in UI) ───────────────────────────────────
NEXT_PUBLIC_PHONE_NUMBER="+919876543210"
NEXT_PUBLIC_WHATSAPP_NUMBER="+919876543210"
NEXT_PUBLIC_HALL_NAME="MM Function Hall"
