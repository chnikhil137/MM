generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String   // Hashed password for admin login
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("User")
}

model Booking {
  id        String   @id @default(cuid())
  name      String   // Client name
  phone     String   // Contact number
  eventType String   // e.g., Wedding, Reception, Corporate
  date      DateTime // The requested date
  status    String   @default("PENDING") // PENDING, BOOKED, REJECTED
  notes     String?  // Any additional requests from the client
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date]) // Ensure a date can only be booked/pending once
  @@map("Booking")
}


